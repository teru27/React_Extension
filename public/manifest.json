{
  "manifest_version": 3,
  "name": "React Chrome Extension",
  "version": "1.0",
  "description": "Reactで作るChrome拡張",
  "action": {},
  "background": {
    "service_worker": "src/background.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://example.com/*",
    "https://*.example.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/contentScript.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/modal.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}